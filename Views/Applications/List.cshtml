@model IEnumerable<TAApplication.Models.Application>
@{
    ViewData["Title"] = "List";
}
<!--
    This is the Applicants List page that shows all the details for
    all the candidates who have applied for the position. 

    Authors - Tyler Allen and Ben Malohi
    Date - September 22, 2021
-->
<div style="margin: 0px 0px 0px -350px">
    <h1 >Applicants List</h1>
    <!--Create new button to add a new applicant-->
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</div>
    <!--Full table of candidates-->
    <table class="table" id="list_table" style="margin: 0px 0px 0px -350px;">
        <!--Table headers-->
        <thead style="display: table-header-group">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.uID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentDegree)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentProgram)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GPA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberHours)
                </th>
                <th>
                    Semesters Completed
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LinkedInURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResumeFile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModificationDate)
                </th>
                <th>Advanced</th>
            </tr>
        </thead>

        <!-- All of the content within the table-->
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="margin: auto;">
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.uID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td class="fitwidth">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentDegree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentProgram)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GPA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberHours)
                    </td>
                    <td class="fitwidth">
                        @Html.DisplayFor(modelItem => item.SemestersCompleted)
                    </td>
                    <td class="fitwidth">
                        @Html.DisplayFor(modelItem => item.LinkedInURL)
                    </td>
                    <td class="fitwidth">
                        @Html.DisplayFor(modelItem => item.ResumeFile)
                    </td>
                    <td class="fitwidth">
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td class="fitwidth">
                        @Html.DisplayFor(modelItem => item.ModificationDate)
                    </td>
                    <!--Details button to view their application and delete button to delete them-->
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
