<h1>
    <!--Header image/text of the page-->
    <div class="container" id="applicant_form">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="~/images/1200px-Utah_Utes_logo.svg.png" alt="University of Utah Logo" width="125" height="125">
            <h2>TA Application Form</h2>
            <p class="lead">Below are required fields in order to fill out an application to become a TA.</p>
            <hr class="mb-4">
        </div>
    </div>
</h1>
<div class="row">
    <!--Controls the preferred email/phone# contact method, profile picture inputs-->
    <div class="col-md-4 order-md-3 mb-4">
        <label>Preferred Method of Contact:</label>
        <div class="d-block my-2">
            <div class="custom-control custom-radio">
                <input id="preferredcontact_email" name="email_input" type="radio" class="custom-control-input" checked="" required="">
                <label class="custom-control-label" for="preferredcontact_email">Email</label>
            </div>
            <div class="custom-control custom-radio">
                <input id="preferrecontact_phone" name="phonenumber_input" type="radio" class="custom-control-input" required="">
                <label class="custom-control-label" for="preferrecontact_phone">Phone</label>
            </div>
        </div>
        <div class="col-md-5 mb-2">
            <label for="picture">Profile Photo:</label>
            <form action="/action_page.php">
                <input type="file" id="profile_picture_form" name="filename">
                <img id="profile_picture_preview_form" src="#" alt="Profile Picture Preview" />
            </form>
        </div>
    </div>

    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Application Form</h4>
        <form class="needs-validation" novalidate="">
            <div class="row">
                <!--Controls the first/last name, uID, email inputs-->
                <div class="col-md-6 mb-1">
                    <label for="firstName">First name</label>
                    <input type="text" class="form-control" id="firstName_form" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="col-md-6 mb-1">
                    <label for="lastName">Last name</label>
                    <input type="text" class="form-control" id="lastName_form" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="username">uID</label>
                    <input type="text" class="form-control" id="uID_form" placeholder="uXXXXXXXX" required="">
                    <div class="invalid-feedback" style="width: 100%;">
                        Your uID is required.
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email_form" placeholder="you@example.com">
                    <div class="invalid-feedback">
                        Please enter a valid email address.
                    </div>
                </div>
            </div>
            <div class="row">
                <!--Controls address/phone#/state/zip inputs-->
                <div class="col-md-6 mb-3">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address_form" placeholder="1234 Main St" required="">
                    <div class="invalid-feedback">
                        Please enter your shipping address.
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="phonenum">Phone #</label>
                    <input type="text" class="form-control" id="phonenum_form" placeholder="">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="state">State</label>
                    <select class="custom-select d-block w-100" id="state_form" required="">
                        <option value="">Choose...</option>
                        <option value="AL">Alabama</option>
                        <option value="AK">Alaska</option>
                        <option value="AZ">Arizona</option>
                        <option value="AR">Arkansas</option>
                        <option value="CA">California</option>
                        <option value="CO">Colorado</option>
                        <option value="CT">Connecticut</option>
                        <option value="DE">Delaware</option>
